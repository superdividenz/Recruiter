generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://neondb_owner:npg_wr3Fk0RdCPQl@ep-falling-dawn-aehadjwi-pooler.c-2.us-east-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  role      String   @default("client") // admin or client
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contractsCreated Contract[] @relation("CreatedBy")
  contractsSigned  Contract[] @relation("SignedBy")
}

model Contract {
  id          String   @id @default(cuid())
  title       String
  content     String   // or file path if uploading PDFs
  status      String   @default("draft") // draft, sent, signed, rejected
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sentAt      DateTime?
  signedAt    DateTime?

  createdById String
  createdBy   User     @relation("CreatedBy", fields: [createdById], references: [id])

  signedById String?
  signedBy   User?    @relation("SignedBy", fields: [signedById], references: [id])

  signatures Signature[]
}

model Signature {
  id         String   @id @default(cuid())
  data       String   // base64 encoded signature image
  signedAt   DateTime @default(now())

  contractId String
  contract   Contract @relation(fields: [contractId], references: [id])
}